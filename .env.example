# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=9000

# Webhook Security (Optional - recommended for production)
# Set a secret path for the webhook endpoint
# If set, the webhook URL must be: http://host:port/WEBHOOK_SECRET
# Example: WEBHOOK_SECRET=my-super-secret-endpoint-xyz123
# WEBHOOK_SECRET=

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# Dry Run Mode (true/false)
# When true, notifications are only logged but not sent to Telegram
DRYRUN=true

# Telegram Bot Configuration
BOT_TOKEN=YOUR-BOT-TOKEN
CHAT_ID=YOUR-CHAT-ID
